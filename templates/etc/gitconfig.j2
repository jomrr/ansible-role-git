[core]
  editor = nvim
  excludesfile = ~/.gitignore
  autocrlf = input
  whitespace = trailing-space,space-before-tab,indent-with-non-tab,tab-in-indent,cr-at-eol
[color]
  branch = auto
  diff = auto
  interactive = auto
  status = auto
{% if git_keyring_helper_file | default('') | length > 0 %}
[credential]
  helper = {{ git_keyring_helper_path }}/{{ git_keyring_helper_file }}
{% endif %}
[push]
  default = simple
[alias]
  a   = add .
  c   = commit
  ca  = commit -a
  cm  = commit -m
  cam = commit -am
  d   = diff
  dc  = diff --cached
  l   = log --graph --pretty=format:"%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset" --abbrev-commit
  p   = push
